<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pepetech.squadhouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SquadHouseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SquadHouse"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.Event.EventCreateActivity"></activity>
        <activity android:name=".activities.Event.EventActivity" />
        <activity android:name=".activities.Interest.ClubInterestActivity" />
        <activity android:name=".activities.Following.FollowingActivity" />
        <activity android:name=".activities.Club.ClubCreateActivity" />
        <activity
            android:name=".activities.Interest.MyInterestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FollowersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Explore.ExploreUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Explore.ExploreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Login.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Explore.ExploreClubActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyProfile.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.Login.LoginActivity">

            <!-- Set default startup screen -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Login.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyProfile.update.UpdateFullNameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyProfile.update.UpdateUsernameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyProfile.update.UpdateProfileImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SetUpRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RoomActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>